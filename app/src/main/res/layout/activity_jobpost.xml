<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jobpost">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Details"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingLeft="110dp"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/titleid"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"

            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job description"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/descriptionid"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="(Optional)"

            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job type"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <CheckBox
            android:id="@+id/fulltimeid"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full time"
            android:textSize="20sp"
            android:textStyle="italic"
            />
        <CheckBox
            android:id="@+id/parttimeid"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part time"
            android:textSize="20sp"
            android:textStyle="italic"
            />
        <CheckBox
            android:id="@+id/internid"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internship"
            android:textSize="20sp"
            android:textStyle="italic"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/salaryid"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="numberDecimal"

            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total vacancies"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/vacancyid"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="number"

            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application deadline"
            android:textSize="20sp"

            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/appdeadlineid"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="date"
            android:hint="DD/MM/YYYY"

            />
        />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/locationid"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"


            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About the company"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingLeft="110dp"
        android:background="@color/colorPrimary"
            android:layout_marginBottom="20dp"
        />
        <EditText
            android:id="@+id/aboutcompanyid"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Company/Employer"

            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Candidate preferences"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingLeft="110dp"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum qualification"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <CheckBox
            android:id="@+id/hscid"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HSC"
            android:textSize="20sp"
            android:textStyle="italic"
            />
        <CheckBox
            android:id="@+id/bscid"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bachelor/Honors"
            android:textSize="20sp"
            android:textStyle="italic"
            />
        <CheckBox
            android:id="@+id/mastersid"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masters"
            android:textSize="20sp"
            android:textStyle="italic"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact details"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingLeft="110dp"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your name"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/yournameid"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"


            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your phone no"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/phonenoid"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="phone"


            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Email"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/emailid"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"



            />
        <Button

            android:id="@+id/postbuttonid"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Ad"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@color/colorPrimary"/>






    </LinearLayout>

</ScrollView>